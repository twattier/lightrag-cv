# LightRAG-CV Environment Configuration
# Copy this file to .env and configure with your values
# DO NOT commit .env to version control

# ========================================
# PostgreSQL Configuration
# ========================================
POSTGRES_DB=lightrag_cv
POSTGRES_USER=lightrag
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_PORT=5432

# ========================================
# Ollama LLM Configuration
# ========================================
# Base URL for Ollama API (host.docker.internal for WSL2/Docker Desktop)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Generation Model
#OLLAMA_LLM_MODEL=qwen3:8b
#OLLAMA_LLM_NUM_CTX=40960
OLLAMA_LLM_MODEL=qwen2.5:7b-instruct-q4_K_M
OLLAMA_LLM_NUM_CTX=32768

# Embedding Model (1024 dimensions)
OLLAMA_EMBEDDING_MODEL=bge-m3:latest

# Reranking Model
OLLAMA_RERANKER_MODEL=xitao/bge-reranker-v2-m3

# ========================================
# Service Ports
# ========================================
MCP_PORT=3000
DOCLING_PORT=8000
LIGHTRAG_PORT=9621

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
