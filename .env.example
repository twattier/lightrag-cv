# LightRAG-CV Environment Configuration
# Copy this file to .env and configure with your values
# DO NOT commit .env to version control

# ========================================
# PostgreSQL Configuration
# ========================================
POSTGRES_DB=lightrag_cv
POSTGRES_USER=lightrag
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_PORT=5432

# ========================================
# LLM Provider Configuration (matches lightrag service)
# ========================================
# LLM provider type: ollama (local), openai (OpenAI API), litellm (LiteLLM proxy)
LLM_BINDING=ollama

# LLM provider base URL
# - For Ollama from host: http://localhost:11434
# - For Ollama from Docker: http://host.docker.internal:11434
# - For OpenAI: https://api.openai.com
# - For LiteLLM: http://localhost:4000
LLM_BINDING_HOST=http://host.docker.internal:11434

# Generation model name
# - Ollama: qwen2.5:7b-instruct-q4_K_M, qwen3:8b, llama3:8b
# - OpenAI: gpt-4, gpt-3.5-turbo
# - LiteLLM: model name configured in proxy
LLM_MODEL=qwen2.5:7b-instruct-q4_K_M

# API key (required when LLM_BINDING=openai or litellm)
# Leave blank for Ollama
LLM_BINDING_API_KEY=

# LLM request timeout (seconds)
LLM_TIMEOUT=1200

# ========================================
# Embedding Provider Configuration
# ========================================
# Embedding provider type: ollama (local), openai (OpenAI API)
EMBEDDING_BINDING=ollama

# Embedding provider base URL
EMBEDDING_BINDING_HOST=http://host.docker.internal:11434

# Embedding model name (1024 dimensions for bge-m3)
# - Ollama: bge-m3:latest
# - OpenAI: text-embedding-ada-002
EMBEDDING_MODEL=bge-m3:latest

# API key (required when EMBEDDING_BINDING=openai)
EMBEDDING_BINDING_API_KEY=

# Embedding dimensions (default: 1024 for bge-m3)
EMBEDDING_DIM=1024

# Embedding request timeout (seconds)
EMBEDDING_TIMEOUT=600

# ========================================
# MCP Server Configuration
# ========================================
# mcpo proxy port (endpoint for OpenWebUI)
MCP_PORT=3000

# ========================================
# Service Ports
# ========================================
DOCLING_HOST=docling
DOCLING_PORT=8000

LIGHTRAG_HOST=lightrag
LIGHTRAG_PORT=9621
MAX_PARALLEL_INSERT=2
MAX_ASYNC=4

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
